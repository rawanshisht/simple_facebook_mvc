@model FacebookApp.Models.User

<div>
    <div class="modal fade" id="editProfileModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form asp-controller="User" asp-action="Edit" method="post">
                    <div class="modal-header">
                        <h4 class="modal-title">Update Your Information </h4>
                    </div>
                    <div class="modal-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="UserName" />
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Email" />
                        <div class="form-group">
                            <label asp-for="Nickname" class="control-label"></label>
                            <input asp-for="Nickname" class="form-control" type="text"/>
                        </div>
                        <div class="form-group">
                            <label asp-for="BirthDate" class="control-label"></label>
                            <input asp-for="BirthDate" class="form-control" type="date"/>
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Bio" class="control-label"></label>
                            <input asp-for="Bio" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Gender" class="control-label"></label>
                            <div class="form-control">
                                <input asp-for="Gender" type="radio" id="r-b" name="sex" value="male" />Male
                                <input asp-for="Gender" type="radio" id="r-b" name="sex" value="female" />Female
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
