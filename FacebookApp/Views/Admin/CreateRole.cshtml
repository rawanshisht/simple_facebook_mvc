@model Role

<div class="row">
    <div class="list-group col-md-2">
        @Html.ActionLink("Create Role", "CreateRole", "Admin", null, new { @class = "list-group-item list-group-item-action" })
        @Html.ActionLink("Get Roles", "GetRoles", "Admin", null, new { @class = "list-group-item list-group-item-action" })

    </div>

    <div class="col-md-10">

        <div class="card card-plain">
            <div class="card-header card-header-info">
                <h4 class="card-title mt-0">Create Role</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Admin" asp-action="CreateRole" class="col-md-6">
                    <div class="form-group">
                        <label>Role Name</label>
                        <input type="text" class="form-control" asp-for="@Model.Name">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <input type="text" class="form-control" asp-for="@Model.Description">
                    </div>


                    <input type="submit" value="Create Role" class="btn btn-primary text-right" />
                </form>
            </div>
        </div>
    </div>
</div>
