@model FacebookApp.ViewModel.UserViewModel


<div class="row">
    <div class="list-group col-md-2">
        @Html.ActionLink("Create User", "CreateUser", "Admin", null, new { @class = "list-group-item list-group-item-action" })
        @Html.ActionLink("Users List", "Index", "Admin", null, new { @class = "list-group-item list-group-item-action" })

    </div>
    <div class="col-md-10">

        <div class="card card-plain">
            <div class="card-header card-header-info">
                <h4 class="card-title mt-0">Create User</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Admin" asp-action="CreateUser" class="col-md-6">
                    <div class="form-group">
                        <label>Nickname</label>
                        <input type="text" class="form-control" asp-for="@Model.Nickname">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" asp-for="@Model.Email">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" asp-for="@Model.Password">
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="datetime" class="form-control" asp-for="@Model.PhoneNumber">
                    </div>
                    <div class="form-group">
                        <label>Bio</label>
                        <input type="text" class="form-control" asp-for="@Model.Bio">
                    </div>
                    <div class="form-group">
                        <label>Gender</label><br />
                        <input asp-for="@Model.Gender" type="radio" id="r-b" name="sex" value="male" style="color:black" />Male
                        <input asp-for="@Model.Gender" type="radio" id="r-b" name="sex" value="female" style="color:black" />Female
                        @*<input type="text" class="form-control" asp-for="@Model.Gender">*@
                    </div>
                    <div class="form-group">
                        <label>Birthdate</label>
                        <input type="date" class="form-control" asp-for="@Model.BirthDate">
                    </div>

                    <div class="form-group">
                        <label>Role</label>
                        <select class="form-control" asp-for="@Model.Role" asp-items="ViewBag.RoleNames"></select>
                    </div>

                    <input type="submit" value="Create" class="btn btn-primary text-right" />
                </form>
            </div>
        </div>
    </div>
</div>
