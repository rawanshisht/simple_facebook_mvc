
@model FacebookApp.ViewModel.UserViewModel



<div class="row">
    <div class="list-group col-md-2">
        @Html.ActionLink("Create User", "CreateUser", "Admin", null, new { @class = "list-group-item list-group-item-action" })
        @Html.ActionLink("Get Users", "Index", "Admin", null, new { @class = "list-group-item list-group-item-action" })

    </div>
    <div class="col-md-10">

        <div class="card card-plain">
            <div class="card-header card-header-info">
                <h4 class="card-title mt-0">Update User</h4>
                <!-- <p class="card-category"> Here is a subtitle for this table</p> -->
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Admin" asp-action="UpdateUser" class="col-md-6">
                    <input type="hidden" asp-for="UserId" />


                    <div class="form-group">
                        <label asp-for="Nickname">Nickname</label>
                        <input type="text" class="form-control" asp-for="Nickname">
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input type="email" class="form-control" asp-for="Email">
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber">Phone</label>
                        <input type="datetime" class="form-control" asp-for="PhoneNumber">
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio">Bio</label>
                        <input type="text" class="form-control" asp-for="Bio">
                    </div>
                    <div class="form-group">
                        <label asp-for="Gender">Gender</label><br />
                        <input asp-for="Gender" type="radio" id="r-b" name="sex" value="male" style="color:black" />Male
                        <input asp-for="Gender" type="radio" id="r-b" name="sex" value="female" style="color:black" />Female
                        @*<input type="text" class="form-control" asp-for="Gender">*@
                    </div>
                    <div class="form-group">
                        <label asp-for="BirthDate">Birthdate</label>
                        <input type="date" class="form-control" asp-for="BirthDate">
                    </div>
                    @*<div class="form-group">
                        <label asp-for="Role">Role</label>
                        <select class="form-control" asp-for="@Model.Role" asp-items="ViewBag.RoleNames"></select>
                    </div>*@

                    <input type="button" onclick="location.href='@Url.Action("Index", "Admin")'" value="Back" class="btn btn-secondary" />
                    <input type="submit" value="Update" class="btn btn-primary text-right" />
                </form>
            </div>
        </div>
    </div>
</div>